{
  "name": "@bivens-dev/lit-starter-kit",
  "version": "0.0.1",
  "description": "A starter kit for building Lit applications and websites.",
  "type": "module",
  "module": "build/src/index.js",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build/src"
  ],
  "license": "Apache-2.0",
  "keywords": [],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "wireit",
    "clean": "gts clean",
    "compile": "wireit",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "start": "wireit",
    "build:ts": "wireit",
    "build:cem": "wireit"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@types/node": "20.8.2",
    "@web/dev-server": "^0.4.1",
    "eslint-plugin-lit": "^1.11.0",
    "eslint-plugin-wc": "^2.0.4",
    "gts": "^5.2.0",
    "typescript": "~5.3.0",
    "wireit": "^0.14.3"
  },
  "dependencies": {
    "lit": "^3.1.1",
    "tslib": "^2.6.2"
  },
  "wireit": {
    "build:ts": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": ["src/**/*.ts", "tsconfig.json"],
      "output": [
        "build/src/**",
        "build/tsconfig.tsbuildinfo"
      ]
    },
    "build:cem": {
      "command": "custom-elements-manifest analyze --outdir build --litelement --globs \"src/**/*.ts\"",
      "files": ["src/**/*.ts"],
      "output": ["build/custom-elements.json"]
    },
    "lint": {
      "command": "gts lint",
      "files": ["src/**/*.ts", ".eslintignore", ".eslintrc.json"],
      "output": ["build/custom-elements.json"]
    },
    "start": {
      "command": "web-dev-server --node-resolve --watch",
      "service": true,
      "dependencies": [
        {
          "script": "build:ts",
          "cascade": false
        }
      ]
    },
    "compile": {
      "dependencies": [
        "build:ts",
        "build:cem"
      ]
    }
  }
}
